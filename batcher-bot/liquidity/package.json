{
  "name": "batcher-liquidity-bot",
  "version": "1.0.0",
  "description": "Just in time and always on liquidity bot for the Batcher DEX",
  "main": "index.js",
  "scripts": {
    "start:ghostnet": "env-cmd -f .env.ghostnet nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "start:mainnet": "env-cmd -f .env.mainnet nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "create": "npm run build",
    "build": "tsc -p .",
    "local": "sudo npm i -g && batcher-liquidity-bot",
    "refresh": "rm -rf ./node_modules ./package-lock.json && npm install"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@dipdup/tzkt-api": "^0.0.1",
    "@microsoft/signalr": "^7.0.5",
    "chalk": "^4.1.2",
    "clear": "^0.1.0",
    "commander": "^10.0.1",
    "dotenv": "^16.0.3",
    "env-cmd": "^10.1.0",
    "figlet": "^1.6.0",
    "fs-extra": "^11.1.1",
    "path": "^0.12.7",
    "prelude-ts": "^1.0.6"
  },
  "devDependencies": {
    "@types/commander": "^2.12.2",
    "@types/figlet": "^1.5.6",
    "@types/node": "^20.1.3",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
