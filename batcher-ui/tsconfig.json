{
  "compilerOptions": {
    "outDir": "build/dist",
    // "module": "ES2015",
    "target": "esnext",
    "lib": [
      "esnext",
      "dom"
    ],
    "sourceMap": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "allowJs": false,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "esnext",
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "test/**/*",
    "__test__/**/*",
    ".eslintrc.json",
    ".prettierrc.json",
    "jest.config.js",
    "pages/*",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "jest"
  ]
}